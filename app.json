{
  "expo": {
    "name": "Pulse",
    "slug": "pulse-frontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",

    "jsEngine": "hermes",                     
    "newArchEnabled": true,                  

    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E88E5"
    },

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Pulse needs location access to show nearby posts and connect you with your local community.",
        "NSCameraUsageDescription": "Pulse needs camera access to let you capture and share moments.",
        "NSMicrophoneUsageDescription": "Pulse needs microphone access for video posts."
      }
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1E88E5"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "RECORD_AUDIO"
      ],
      "softwareKeyboardLayoutMode": "resize",
      "package": "com.rajveer69699.pulsefrontend"
    },

    "web": {
      "favicon": "./assets/favicon.png"
    },

    "extra": {
      "eas": {
        "projectId": "9e305855-a5a5-4744-b8ab-7a35789cb4da"
      }
    }
  }
}
